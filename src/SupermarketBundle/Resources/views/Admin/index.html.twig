{% extends 'SupermarketBundle:Admin:base.html.twig' %}

{% block body %}
    <!--/content-inner-->
    <div class="left-content">
        <div class="container-fluid" style="margin-top: 20px;">
            <div class="row">
                <div class="row col-md-2 pull-right">
                    <form action="{% block action %}{{ path('backend_search_receipt') }}{% endblock action %}?query=" method="get">
                        <input type="text" class="search-query form-control" name="query" placeholder="{% block placeholder %}{{ 'admin.search.receipt'|trans }}{% endblock placeholder %}"/>
                    </form>
                </div>
            </div>
        </div>
        <div class="mother-grid-inner">
            <!--four-grids here-->
            <div class="four-grids">
                {{ render(controller('SupermarketBundle:Backend:getUser')) }}
                {{ render(controller('SupermarketBundle:Backend:get', {'route' : 'SupermarketBundle:Admin:pending.html.twig', 'key' : 0})) }}
                {{ render(controller('SupermarketBundle:Backend:get', {'route' : 'SupermarketBundle:Admin:valid.html.twig', 'key' : 1})) }}
                {{ render(controller('SupermarketBundle:Backend:getCountAll')) }}
                <div class="clearfix"></div>
            </div>
            <!--//four-grids here-->
            <!--agileinfo-grap-->
            <div class="agileinfo-grap">
                <div class="agileits-box">
                    {% block content %}{{ render(controller('SupermarketBundle:Backend:getAll')) }}{% endblock content %}
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endblock body %}