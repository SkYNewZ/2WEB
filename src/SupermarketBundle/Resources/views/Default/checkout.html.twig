{% extends 'SupermarketBundle::layout.html.twig' %}

{% block title %}{{ 'checkout.title'|trans }}{% endblock %}

{% block breadcrumbs_title %}{{ parent() }}
    <li class="active">{{ 'checkout.title'|trans }}</li>
{% endblock %}

{% block body %}
    <!-- checkout -->
    <div class="checkout">
        <div class="container">
            <h2>{{ 'checout.contains'|trans }} <span>3 {{ 'checkout.product_contains'|trans }}</span></h2>
            <div class="checkout-right">
                <table class="timetable_sub">
                    <thead>
                    <tr>
                        <th>SL No.</th>
                        <th>{{ 'checkout.photo'|trans }}</th>
                        <th>{{ 'checkout.quantity'|trans }}</th>
                        <th>{{ 'checkout.product_name'|trans }}</th>

                        <th>{{ 'checkout.price'|trans }}</th>
                        <th>{{ 'checkout.remove'|trans }}</th>
                    </tr>
                    </thead>
                    <tr class="rem1">
                        <td class="invert">1</td>
                        <td class="invert-image"><a href="single.html.twig"><img src="images/1.png" alt=" "
                                                                                 class="img-responsive"/></a></td>
                        <td class="invert">
                            <div class="quantity">
                                <div class="quantity-select">
                                    <div class="entry value-minus">&nbsp;</div>
                                    <div class="entry value"><span>1</span></div>
                                    <div class="entry value-plus active">&nbsp;</div>
                                </div>
                            </div>
                        </td>
                        <td class="invert">Tata Salt</td>

                        <td class="invert">$290.00</td>
                        <td class="invert">
                            <div class="rem">
                                <div class="close1"></div>
                            </div>
                            <script>$(document).ready(function (c) {
                                    $('.close1').on('click', function (c) {
                                        $('.rem1').fadeOut('slow', function (c) {
                                            $('.rem1').remove();
                                        });
                                    });
                                });
                            </script>
                        </td>
                    </tr>
                    <!--quantity-->
                    <script>
                        $('.value-plus').on('click', function () {
                            var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) + 1;
                            divUpd.text(newVal);
                        });

                        $('.value-minus').on('click', function () {
                            var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) - 1;
                            if (newVal >= 1) divUpd.text(newVal);
                        });
                    </script>
                    <!--quantity-->
                </table>
            </div>
            <div class="checkout-left">
                <div class="checkout-left-basket">
                    <h4>{{ 'checkout.continue_checkout'|trans }}</h4>
                    <ul>
                        <li>Product1 <i>-</i> <span>$15.00 </span></li>
                        <li>{{ 'checkout.frais_total'|trans }} <i>-</i> <span>$15.00</span></li>
                        <li>Total <i>-</i> <span>$84.00</span></li>
                    </ul>
                </div>
                <div class="checkout-right-basket">
                    <a href="single.html.twig"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>{{ 'checkout.continue_shopping'|trans }}</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- //checkout -->
{% endblock %}