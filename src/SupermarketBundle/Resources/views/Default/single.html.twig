{% extends 'SupermarketBundle::layout.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block breadcrumbs_title %}{{ parent() }}
    <li class="active">{{ article.name }}</li>
{% endblock %}

{% block body %}
    <div class="products">
        <div class="container">
            <div class="agileinfo_single">

                <div class="col-md-4 agileinfo_single_left">
                    <img id="example" src="{{ article.media.images.0.mediumUrl }}"
                         alt="{{ article.media.images.0.mediumUrl }}" class="img-responsive">
                </div>
                <div class="col-md-8 agileinfo_single_right">
                    <h2>{{ article.name }}</h2>
                    <div class="w3agile_description">
                        <h4>Description :</h4>
                        <ul style="margin-top: 10px; list-style: none">
                            <li>Ref : {{ article.id }}</li>
                            <li>{{ 'article.brand'|trans }} : {{ article.brand.name }}</li>
                            <li>{{ 'article.available'|trans }} :
                                {% if article.available %}
                                    <span class="glyphicon glyphicon-ok" style="color: green"></span>
                                {% else %}
                                <span class="glyphicon glyphicon-remove" style="color: red"></span>
                                {% endif %}
                            </li>
                        </ul>
                        <p></p>
                    </div>
                    <div class="snipcart-item block">
                        <div class="snipcart-thumb agileinfo_single_right_snipcart">
                            <h4 class="m-sing">
                                {{ article.units.0.price.formatted }}
                                {% if article.units.0.originalPrice.formatted and article.units.0.price.formatted != article.units.0.originalPrice.formatted %}
                                    <span>{{ article.units.0.originalPrice.formatted }}</span>
                                {% endif %}</h4>
                        </div>
                        <div class="snipcart-details agileinfo_single_right_details"
                             style="width: 50% !important; text-align: left">
                            <form action="{{ path('cart_add') }}" method="post" id="add-to-cart">
                                <input type="hidden" name="id" value="{{ article.id }}">
                                <input type="number" name="quantity" value="1" min="1" class="pull-left col-md-2 col-xs-6">
                                <input type="submit" name="submit" value="{{ 'article.add_cart'|trans }}"
                                       class="button col-md-4 pull-right col-xs-6" style="width: 45%;">
                            </form>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}